extends layoutLogin

block content
	.padding20px
	.container-fluid
		.jumbotron
			.jumbotext
				h1 Sign up!
				p
					| We promise not to be evil with your info.  Pinky swear.
				if error
					h5.errortext= error
	.container-fluid
		.row
			form.form-horizontal(action="/auth/signup", method="post")
				.col-sm-6
					.form-group
						label.col-sm-2.control-label(for='username') Username
						.col-sm-10
							input.col-xs-12(class="inputfield" type="text", name="username", placeholder="Username")
					.form-group
						label.col-sm-2.control-label(for='email') Email
						.col-sm-10
							input.col-xs-12(class="inputfield" type="email", name="email", placeholder="Email Address")
					.form-group
						label.col-sm-2.control-label(for='password') Password
						.col-sm-10
							input.col-xs-12(class="inputfield" type="password", name="password", placeholder="Password")
					.form-group
						label.col-sm-2.control-label(for='hometown') Hometown
						.col-sm-10
							input.col-xs-12(class="inputfield" type="text", name="hometown", placeholder="Where you live now")
					.form-group
						label.col-sm-2.control-label(for='firstname') First Name
						.col-sm-10
							input.col-xs-12(class="inputfield" type="text", name="firstname", placeholder="First Name")
					.form-group
						label.col-sm-2.control-label(for='lastname') Last Name
						.col-sm-10
							input.col-xs-12(class="inputfield" type="text", name="lastname", placeholder="Last Name")
				.col-sm-6
					.form-group
						label.col-sm-3.control-label(for='favGame') Favorite Game
						.col-sm-8
							input.col-xs-12(class="inputfield" type="text", name="favGame", placeholder="Your all time favorite game")
					.form-group
						label.col-sm-3.control-label(for='favGenre') Favorite Genre
						.col-sm-8
							input.col-xs-12(class="inputfield" type="text", name="favGenre", placeholder="Your all time favorite type of game")
					.form-group
						label.col-sm-3.control-label(for='steamid') Steam ID
						.col-sm-8
							input.col-xs-12(class="inputfield" type="text", name="steamid", placeholder="Your Steam Username")
					.form-group
						label.col-sm-3.control-label(for='psnid') PSN ID
						.col-sm-8
							input.col-xs-12(class="inputfield" type="text", name="psnid", placeholder="Your Playstation Network Username")
					.form-group
						label.col-sm-3.control-label(for='xboxliveid') Xbox Live ID
						.col-sm-8
							input.col-xs-12(class="inputfield" type="text", name="xboxliveid", placeholder="Your Xbox Live Username")
					.form-group
						.col-sm-offset-9.col-sm-9
							input(class="btn btn-primary" type="submit")
	//
		Easter Egg! 
	.container
		#easteregg.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') Ã—
						span.sr-only Close
						h4#myModalLabel.modal-title w00t!  You remembered the Konami Code!
					.modal-body
						p.modaltext Yay for you!  Please enjoy this fabulous video.
						iframe(width='420', height='315', src='http://www.youtube.com/embed/9W-VGUOiVDc?rel=0&enablejsapi=1', frameborder='0', allowfullscreen='allowfullscreen')
						p.modaltext
							| Seriously though, Don Hertzfeldt is mega awesome and you should definitely watch more of his stuff.
					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Close

	script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js')
	script(src='/bootstrap/js/bootstrap.min.js')
	script(src='/lib/sweet-alert.min.js')
	script(src='/lib/konami.js')
	script(src='/scripts/loginsignup.js')
	script(src='/main.js')

		